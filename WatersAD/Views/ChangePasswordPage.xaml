<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WatersAD.Views.ChangePasswordPage"
              xmlns:viewModels="clr-namespace:WatersAD.ViewModels"
             x:DataType="viewModels:ChangePasswordViewModel"
             Title="ChangePasswordPage">
    <Grid RowDefinitions="Auto,*" RowSpacing="0">

        <VerticalStackLayout Grid.Row="0"
                    BackgroundColor="{StaticResource Secondary}"
                    VerticalOptions="Start"
                    Spacing="1"
                    Padding="20">
            <Label Text="Alterar palavra passe"></Label>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1"
                    Margin="20"
                    Spacing="20">

            <Entry Placeholder="Password "
          FontSize="12"
                     Text="{Binding OldPassword}"
         />

            <Entry Placeholder="Nova password"
        
          FontSize="12"
                    Text="{Binding NewPassword}"
         />
            <Entry Placeholder="Confirmar"

  FontSize="12"
                   Text="{Binding Confirm}"
 />



            <Button Text="Alterar"
           FontSize="Small"
           FontAttributes="Bold"
    Command="{Binding ChangePasswordCommand }"
          />
        </VerticalStackLayout>
    </Grid>
</ContentPage>