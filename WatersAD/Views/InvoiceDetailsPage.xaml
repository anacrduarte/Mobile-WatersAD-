<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WatersAD.Views.InvoiceDetailsPage"
              xmlns:viewModels="clr-namespace:WatersAD.ViewModels"
              x:DataType="viewModels:InvoiceDetailsViewModel" 
            xmlns:models="clr-namespace:WatersAD.Models"
             Title="InvoiceDetailsPage">

    <StackLayout Padding="10">
      
        <Label Text="Invoice Details"
           FontSize="24"
           HorizontalOptions="Center" />

        <Label Text="Invoice Number:"
           FontSize="18" />

        <Label x:DataType="models:InvoiceDetails" Text="{Binding Invoice.totalAmount}" />

        <Label Text="Invoice Date:"
           FontSize="18" />

        <Label Text="{Binding Invoices.Invoice.invoiceDate, StringFormat='{0:MMMM dd, yyyy}'}" />

        <Label Text="Total Amount:"
           FontSize="18" />

        <Label Text="{Binding Invoices.Invoice.totalAmount, StringFormat='{0:C}'}" />

        <Label Text="Status:"
           FontSize="18" />
  
        <Label Text="{Binding Invoices.Invoice.issued}" />
    </StackLayout>
</ContentPage>